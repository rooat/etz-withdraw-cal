	  <script type="text/javascript">
	  	function createbtn(){
	  		let user_id = $("#userid").val()
	  		let url = "/api/create";
	  		let params ={
	  			user_id: user_id
	  		}
	  		methods(url,params)
	  	}
		
		function withdrawbtn(){
			let address = $("#address").val()
