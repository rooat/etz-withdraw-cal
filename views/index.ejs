			let url = "/api/withdraw";
			let params = {
				inputVal:inputVal,
				address:address
			}
		}

		function  updateNotice(){
			let url = "/api/update_notice";
			let params ={
				"noticeId":8,
				"noticeType":2,
				"noticeComment":"ddddddd",
				"state":0
			}
			methods(url,params)
		}

	  	

	  	

